mixin itemBanner(idBanner, clase)
	div(class="#{clase}")
		div( id="#{idBanner}")
			script.
				googletag.cmd.push(function() { googletag.display("#{idBanner}"); });

mixin magazine(link, category, seccion, number, title, type, label, multimedia)
	a(href="#{link}").featured
		.thumb
			img(src="http://lorempixel.com/640/450/#{category}/#{number}")
			if type !== " "
				i(class="fa #{type}")
			if multimedia !== undefined
				i(class="fa #{multimedia}")
		.highlight
			h3
				span(class="#{seccion} tag") #{seccion}
				span.title #{title}
		if label !== " "
			.label
				span Patrocinado



mixin item-note(link, category, seccion, number, title, type, id, multimedia)
	a(href="#{link}").item-note
		.thumb
			img(src="img/blank.gif", data-echo="http://lorempixel.com/100/70/#{category}/#{number}")
		h3
			span.title 
				if type !== " "
					i(class="fa #{type}")
				if multimedia !== undefined
					i(class="fa #{multimedia}")
				| #{id} #{title}
			span(class="#{seccion} tag") #{seccion}

