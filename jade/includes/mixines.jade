mixin item-menu(name, url)
	li(class=(location == '#{name}' ? 'selected #{name}' : '#{name}'))
		a(href='#{url}') #{name}


mixin item-union(url, ciudad, link, nota1, nota2, nota3)
	div
		h3
			a(href="#{url}") #{ciudad}
		a(href="#{url}").url #{link}

		ul
			li
				a(href="#{url}")
					img(src="http://placehold.it/136x76")
				a(href="#") #{nota1}

			li
				a(href="#{url}")
					img(src="http://placehold.it/136x76")
				a(href="#") #{nota2}


